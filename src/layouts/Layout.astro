---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Calculadora de Notas Ponderadas", 
	description = "Calcula tu promedio ponderado y la nota m√≠nima necesaria para aprobar" 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		
		<!-- Fuente Inter (sustituto de SF Pro) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
		
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	html {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', system-ui, sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
		font-feature-settings: 'cv11', 'ss01', 'ss02';
	}
	
	body {
		width: 100%;
		min-height: 100vh;
		background-color: #F5F5F7;
		overflow-x: hidden;
	}
	
	/* macOS-specific optimizations */
	@supports (-webkit-backdrop-filter: blur(20px)) or (backdrop-filter: blur(20px)) {
		.backdrop-blur-ios,
		.backdrop-blur-ios-lg {
			-webkit-backdrop-filter: blur(20px);
			backdrop-filter: blur(20px);
		}
	}
	
	/* Smooth scrolling for macOS */
	@media (prefers-reduced-motion: no-preference) {
		html {
			scroll-behavior: smooth;
		}
	}
	
	/* iOS-style touch feedback */
	* {
		-webkit-tap-highlight-color: transparent;
		-webkit-touch-callout: none;
	}
	
	/* Custom scrollbar (webkit) */
	::-webkit-scrollbar {
		width: 8px;
		height: 8px;
	}
	
	::-webkit-scrollbar-track {
		background: transparent;
	}
	
	::-webkit-scrollbar-thumb {
		background: rgba(255, 255, 255, 0.2);
		border-radius: 10px;
	}
	
	::-webkit-scrollbar-thumb:hover {
		background: rgba(255, 255, 255, 0.3);
	}
</style>
